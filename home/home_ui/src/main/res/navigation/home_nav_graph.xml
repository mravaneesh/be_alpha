<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.home_ui.view.HomeFragment"
        android:label="Home">

        <deepLink
            app:uri="bealpha://app/homeFragment"/>
        <action
            android:id="@+id/action_homeFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
        <action
            android:id="@+id/action_homeFragment_to_habitSelectFragment"
            app:destination="@id/habitSelectFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.example.home_ui.addPost.CreatePostFragment"
        android:label="fragment_create_post"
        tools:layout="@layout/fragment_create_post" >

        <argument
            android:name="habitTitle"
            app:argType="string"
            android:defaultValue=""/>

        <deepLink
            app:uri="bealpha://app/createPostFragment?habitTitle={habitTitle}"/>

        <action
            android:id="@+id/action_createPostFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.home_ui.notification.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/habitSelectFragment"
        android:name="com.example.home_ui.addPost.HabitSelectFragment"
        android:label="HabitSelectFragment" />

</navigation>