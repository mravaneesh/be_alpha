<!--                android:background="?android:listDivider"/>-->

            <TextView
                android:id="@+id/tvChallenges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rvPeopleToFollow"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Challenges"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="10dp"
                android:padding="3dp"
                android:textColor="@color/black"
                android:fontFamily="@font/raleway_semi_bold"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <FrameLayout
                android:id="@+id/challenge_75hard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvChallenges"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/challenge_meditation">

                <include layout="@layout/item_challenge" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/challenge_meditation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvChallenges"
                app:layout_constraintStart_toEndOf="@id/challenge_75hard"
                app:layout_constraintEnd_toEndOf="parent">

                <include layout="@layout/item_challenge" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/challenge_eatHealthy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/challenge_75hard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/challenge_gym">

                <include layout="@layout/item_challenge" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/challenge_gym"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/challenge_meditation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/challenge_eatHealthy">

                <include layout="@layout/item_challenge" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/challenge_marathon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/challenge_gym"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <include layout="@layout/item_challenge" />
            </FrameLayout>

