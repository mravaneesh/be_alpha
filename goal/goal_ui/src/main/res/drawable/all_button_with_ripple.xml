<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight"> <!-- Ripple color, change as needed -->

    <!-- Background of your button -->
    <item android:id="@android:id/mask">
        <shape>
            <solid android:color="@color/button_secondary" /> <!-- Your custom button color -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- The background that will appear under the ripple -->
    <item>
        <shape>
            <solid android:color="@color/button_secondary" /> <!-- Same custom color -->
            <corners android:radius="10dp" /> <!-- Same rounded corners -->
        </shape>
    </item>
</ripple>
